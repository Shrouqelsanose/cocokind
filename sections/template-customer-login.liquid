{{ 'login.css' | asset_url | stylesheet_tag }}

<div class="login__container">
  <div class="form__sign--in" id="form__sign--in">
    <div>
      <div class="form__heading">
        <h1>{{ section.settings.loginTitle }}</h1>
      </div>
      <div class="form__signin--contianer">
        {% form 'customer_login' %}
          {% if form.errors %}
            <div class="errors-content">
              <strong class="error_head">Error!</strong>
              <p role="alert">{{ form.errors | default_errors }}</p>
            </div>
          {% endif %}
          <div class="form__login-label-input">
            <label class="form__login--label " for="email_address" aria-hidden="true">Email</label>
            <input
              type="email"
              name="customer[email]"
              id="email_address"
              autocomplete="email"
              class="form__login--input"
              placeholder="Email"
            >
          </div>

          {% if form.password_needed %}
            <div class="form__login-label-input">
              <label
                class="form__login--label "
                for="password"
                aria-hidden="true"
                >Password</label
              >
              <input
                type="password"
                name="customer[password]"
                id="password"
                autocomplete="current-password"
                class="form__login--input"
                placeholder="password"
              >
            </div>
          {% endif %}

          <div class="btn-login">
            <button class="btn-submit" type="submit" onclick="showSpinner()">
              <span class="btn-name">
                <span id="spinner" class="hidden"></span>
                <span class="btn-text">Sign in</span>
              </span>
            </button>
          </div>

          <a class="forget__password" href="#form__recover">Forgot your password?</a>

          <div class="sign__up">
            <span> <a href="https://cocokind-2.myshopify.com/account/register">Create Account </a></span>
          </div>
        {% endform %}
      </div>
    </div>
  </div>

  <div class="form__recover--container" id="form__recover">
    <div>
      <div class="form__heading">
        <h1>Recover Your Password</h1>
      </div>
      <div class="form__signin--contianer">
        {% form 'recover_customer_password' %}
          {% if form.errors %}
            <div class="errors-content">
              <strong class="error_head">Error!</strong>
              <p role="alert">{{ form.errors | default_errors }}</p>
            </div>
          {% endif %}
          <div class="form__login-label-input">
            <label class="form__login--label visually-hidden" for="email" aria-hidden="true">Email address</label>
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              class="form__login--input"
              placeholder="Email"
            >
          </div>

          <div class="btn-login">
            <button class="btn-submit" type="submit">Recover Password</button>
          </div>
          <a class="login-password" href="#form__sign--in">Back to Login</a>
        {% endform %}
      </div>
    </div>
  </div>
</div>
{{ 'login.js' | asset_url | script_tag }}

{% schema %}
{
  "name": "login",
  "settings": [
    {
      "type": "text",
      "label": "login Title",
      "id": "loginTitle"
    },
    {
      "type": "url",
      "id": "regs",
      "label": "regster"
    }
  ],
  "presets": [
    {
      "name": "login"
    }
  ]
}
{% endschema %}
